{% extends "layout.njk" %}

{% block head %} 
    <title>Sobre - JG Consultoria </title>
{% endblock %}

{% block content %}

    <div id="wrapper">
        <img src="{{about.avatar_url}}" alt="imagem de " srcset="">
        <h1>{{about.name}}</h1>
        <h2>{{about.role}}</h2>
        <h3>{{about.description}}</h3>
    </div>

    <div id="links-footer" class="links">
        {% for link in about.links %}
            <a href="{{link.url}}" target= "_blank">{{link.name}}</a>
        {% endfor %}
        
    </div>

{% endblock %}